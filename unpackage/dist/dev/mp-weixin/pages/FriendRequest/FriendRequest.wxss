.friend-request .iconfont {
  font-size: 20px;
}
.friend-request .friend-request-content-list {
  margin: 15px 20px;
  padding: 10px 0;
  box-shadow: 1px 1px 5px 1px rgba(167, 167, 167, 0.3);
}
.friend-request .friend-request-content-list .friend-list-avatar {
  display: flex;
  align-items: end;
  justify-content: space-around;
}
.friend-request .friend-request-content-list .friend-list-name {
  text-align: center;
  margin: 10rpx 0;
}
.friend-request .friend-request-content-list .friend-list-tiem {
  color: #bfbfbf;
  font-size: 12px;
  text-align: center;
}
.friend-request .friend-request-content-list .friend-list-message {
  background-color: #e7e7e7;
  border-radius: 5px;
  padding: 5px;
  font-size: 14px;
  margin: 15px 15px 0 15px;
}
.friend-request .friend-request-content-list .friend-list-title {
  text-align: center;
  color: black;
  font-size: 12px;
  margin-bottom: 5px;
}
.friend-request .friend-popup-content {
  display: flex;
}
.friend-request .friend-popup-content .friend-list-avatar-reject, .friend-request .friend-popup-content .friend-list-avatar-resolve {
  display: inline-block;
  margin: 10px 20px 20px 20px;
}
.friend-request .friend-list-avatar-reject, .friend-request .friend-list-avatar-resolve {
  padding: 0px 20px;
  border-radius: 50px;
  height: 25px;
  line-height: 25px;
  font-size: 14px;
  color: #FFFFFF;
}
.friend-request .friend-list-avatar-reject {
  background-color: rgba(255, 0, 0, 0.5);
}
.friend-request .friend-list-avatar-resolve {
  background-color: #f9ce2f;
}
.friend-request .friend-list-avatar-reject-hover {
  background-color: rgba(255, 29, 29, 0.5);
}
.friend-request .friend-list-avatar-resolve-hover {
  background-color: #fbd40f;
}

