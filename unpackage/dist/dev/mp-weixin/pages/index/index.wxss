.index {
  background-color: #f0f0f0;
  overflow: hidden;
  height: 100vh;
  display: flex;
  flex-flow: column nowrap;
}
.index_content {
  background-color: #ffffff;
  flex: 1;
  position: relative;
  height: calc(100vh - 44px - 44px - 50px);
  overflow: hidden;
}
.index_content .index_content-list .index_content-item_img {
  display: flex;
  padding: 10px;
  box-sizing: border-box;
  border-bottom: solid 1rpx #f3f1f1;
  align-items: center;
}
.index_content .index_content-list .index_content-item_img .index_content-content {
  position: relative;
}
.index_content .index_content-list .index_content-item_img .index_content-content .index_content-u-badge {
  position: absolute;
  background-color: red;
  top: -10rpx;
  right: -10rpx;
}
.index_content .index_content-list .index_content-item_img .index_content-item_text {
  width: 100%;
  margin-left: 10px;
}
.index_content .index_content-list .index_content-item_img .index_content-item_text .index_content-item_text_name {
  display: flex;
  width: 100%;
  align-items: center;
}
.index_content .index_content-list .index_content-item_img .index_content-item_text .index_content-item_text_name .index_content-item_text_name_name {
  width: 100px;
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 18px;
}
.index_content .index_content-list .index_content-item_img .index_content-item_text .index_content-item_text_name .index_content-item_text_name_day {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #999;
  font-size: 12px;
}
.index_content .index_content-list .index_content-item_img .index_content-item_text .index_content-item_text_bei {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
  margin-top: 5px;
  color: #999;
  font-size: 12px;
}
.index_content_refresher {
  display: flex;
  align-items: center;
  position: absolute;
  justify-content: center;
  width: 100%;
  top: 0;
}
.index_content_refresher .iconfont.icon-xialashuaxin {
  font-size: 20px;
  margin-right: 10px;
}

