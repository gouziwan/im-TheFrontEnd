.register .iconfont.icon-fanhui {
  font-size: 23px;
}
.login-title-loog {
  text-align: center;
}
.login-title-loog .iconfont {
  font-size: 150rpx;
  color: #FBE836;
}
.loogin-text {
  padding: 0 32px;
  margin-top: 30rpx;
}
.loogin-text view {
  margin-top: 10px;
}
.loogin-text .loogin-text-lg {
  font-size: 40rpx;
  font-family: 600;
}
.loogin-text .loogin-text-sm {
  font-size: 30rpx;
  color: #999;
}
.register-input {
  margin-top: 30rpx;
  padding: 0 32px;
}
.register-input .register-input-content {
  display: flex;
  margin-top: 30rpx;
  border-bottom: solid 1px #edecef;
  padding: 5px 0;
  align-items: center;
  justify-content: space-between;
}
.register-input .register-input-content .register-input-username, .register-input .register-input-content .register-input-passwrold {
  flex: 1;
  width: 100%;
}
.register-input .register-input-content .register-input-content-err {
  display: inline-block;
  font-size: 14px;
  color: red;
  flex-shrink: 0px;
  /*防止被压缩*/
}
.register-input .register-input-passwrold-err {
  height: 14px;
  line-height: 14px;
  font-size: 14px;
  text-align: center;
  margin-top: 20rpx;
  color: red;
}
.register-input .register-input-button {
  background-color: #FBE836;
  font-size: 12px;
  width: 100px;
  height: 40px;
  line-height: 40px;
  text-align: center;
}
.register-button {
  margin-top: 80rpx;
  text-align: center;
}
.register-button .register-button-primary {
  width: 450rpx;
  border-radius: 20px;
  background-color: #FBE836;
  outline: none;
  height: 80rpx;
  font-size: 16px;
  line-height: 80rpx;
  color: #20212A;
  box-shadow: 0px 50rpx 35rpx -33rpx rgba(255, 228, 49, 0.4);
}
.register-button .register-button-primary-hover {
  background-color: #fbd40f;
}
.register-button .register-button-primary.disabled {
  background-color: #f3f3f3;
  box-shadow: none;
}
.register-button .register-wangji {
  margin-bottom: 10px;
  font-size: 14px;
}

