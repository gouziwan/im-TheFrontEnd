.iconfont.icon-fanhui {
  font-size: 23px;
}
.slot-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 50%;
  border: solid 1px #3c9cff;
  color: #3c9cff;
}
.login-title {
  margin-right: 30rpx;
}
.forgotpassword-content-steps {
  margin: 50px 0;
}
.forgotpassword-content-swiper {
  display: block;
  padding: 0 90rpx;
  height: 300rpx;
  margin: 50px 0;
}
.forgotpassword-content-swiper .forgotpassword-content-swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.forgotpassword-content-swiper .forgotpassword-content-swiper-item .swiper-item-conenten {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50rpx 0;
  width: 100%;
}
.forgotpassword-content-swiper .forgotpassword-content-swiper-item .swiper-item-conenten .swiper-item-inpout {
  width: 100%;
  display: inline-block;
  flex: 1;
  border: solid 1px #c6c6c6;
  border-radius: 10rpx;
  padding: 5px;
}
.forgotpassword-content-swiper .forgotpassword-content-swiper-item .swiper-item-conenten .swiper-item-title {
  margin-right: 10px;
  font-size: 30rpx;
}
.forgotpassword-content-swiper .forgotpassword-content-swiper-item .swiper-item-conenten .loogin-button-code {
  font-size: 14px;
  margin-left: 15px;
  background-color: #007BFF;
  color: #FFFFFF;
  min-width: 200rpx;
}
.forgotpassword-content-swiper .forgotpassword-content-swiper-item .swiper-item-conenten .loogin-button-code-hover {
  background-color: #006de1;
}
.forgotpassword-content-swiper .forgotpassword-content-swiper-item .swiper-item-conenten .loogin-button-code.disabled {
  background-color: rgba(0, 123, 255, 0.5);
}
.loogin-button {
  margin-top: 50rpx;
  text-align: center;
}
.loogin-button .loogin-button-primary {
  width: 450rpx;
  border-radius: 20px;
  background-color: #FBE836;
  outline: none;
  height: 80rpx;
  font-size: 16px;
  line-height: 80rpx;
  color: #20212A;
  box-shadow: 0px 50rpx 35rpx -33rpx rgba(255, 228, 49, 0.4);
}
.loogin-button .loogin-button-primary-hover {
  background-color: #fbd40f;
}
.loogin-button .loogin-wangji {
  margin-bottom: 10px;
  font-size: 14px;
}

