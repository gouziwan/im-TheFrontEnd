.chat-view-scroll {
  flex: 1;
  height: 100%;
  background-color: #f0f0f0;
  overflow: hidden;
  background-color: #f3f3f3;
  overflow-anchor: auto;
}
.chat-view-scroll .char_view-list {
  overflow-anchor: auto;
}
.chat-view-scroll .char_view-list .char_view_list_item {
  text-align: center;
  font-size: 12px;
  color: #999;
}
.chat-view-scroll .char_view-list .char_view_list_content {
  word-break: break-all;
  display: flex;
  padding-left: 30rpx;
  padding-right: calc(30rpx + 44px);
  margin: 10px 0;
}
.chat-view-scroll .char_view-list .char_view_list_content .char_list_neiron-right {
  margin-left: 10px;
}
.chat-view-scroll .char_view-list .char_view_list_content .char_list_neiron-right .char_list_neiron-name {
  font-size: 30rpx;
  margin-bottom: 15rpx;
}
.chat-view-scroll .char_view-list .char_view_list_content .char_list_neiron-right .char_list_neiron_content .char_list_neiron_content_text {
  display: flex;
  background-color: #ffffff;
  min-height: 40px;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  position: relative;
  margin-left: 15rpx;
  padding: 10px 15px;
  box-sizing: border-box;
  font-size: 14px;
}
.chat-view-scroll .char_view-list .char_view_list_content .char_list_neiron-right .char_list_neiron_content .char_list_neiron_content_text::before {
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  left: -14px;
  border: solid 7px rgba(0, 0, 0, 0);
  border-right-color: #ffffff;
  top: 15.5px;
}
.chat-view-scroll .char_view-list .char_view_list_content.right {
  flex-direction: row-reverse;
  padding-right: 30rpx;
  padding-left: calc(30rpx + 44px);
}
.chat-view-scroll .char_view-list .char_view_list_content.right .char_list_neiron-right {
  margin-right: 10px;
}
.chat-view-scroll .char_view-list .char_view_list_content.right .char_list_neiron-right .char_list_neiron-name {
  text-align: right;
}
.chat-view-scroll .char_view-list .char_view_list_content.right .char_list_neiron-right .char_list_neiron_content_text_right {
  display: inline-flex;
  background-color: #FBE836;
  min-height: 40px;
  justify-content: center;
  align-items: center;
  padding: 0px 10px;
  border-radius: 5px;
  position: relative;
  margin-right: 15rpx;
  padding: 10px 15px;
  box-sizing: border-box;
  font-size: 14px;
}
.chat-view-scroll .char_view-list .char_view_list_content.right .char_list_neiron-right .char_list_neiron_content_text_right::before {
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  right: -14px;
  border: solid 7px rgba(0, 0, 0, 0);
  border-left-color: #FBE836;
  top: 12px;
}
.chat-view-scroll .char_view-list:last-child {
  padding-bottom: 10px;
}

