.areas {
  position: absolute;
  bottom: 0;
  height: 150px;
  width: 100%;
  background-color: #f0f0f0;
  border-top: solid 1px #cbcbcb;
  z-index: 1000000;
  display: flex;
  flex-flow: wrap;
  justify-content: space-around;
  align-items: center;
}
.areas .areas-list {
  width: calc(100% / 4);
  box-sizing: border-box;
}
.areas .areas-list .areas-item {
  background-color: #ffffff;
  height: calc((100vw / 4) - 90rpx);
  margin: 0 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
}
.areas .areas-list .areas-item .iconfont {
  font-size: calc((100vw / 4) - 90rpx - 45rpx);
}
.areas .areas-list .areas-item-text {
  display: inline-block;
  text-align: center;
  width: 100%;
  margin-top: 5px;
  font-size: 12px;
  line-height: 12px;
}
.areas .areas-map {
  width: 100%;
  height: 100%;
}
.areas .areasContent-map {
  position: relative;
  width: 100%;
  height: 100vh;
}
.areas .areas-map-text {
  position: absolute;
  top: 75rpx;
  left: 30rpx;
  color: #000000;
}
.areas .areasContent-map-navbar {
  font-size: 12px;
  background-color: #FBE836;
}
.areas .areas-popup {
  position: absolute;
  height: 500rpx;
  background-color: #ffffff;
  bottom: 0;
  width: 100%;
  overflow: auto;
  bottom: -500rpx;
}
.areas .areas-popup-list {
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 30rpx;
  box-sizing: border-box;
  border: solid 1px #edecef;
}

